    /* CAJAS DE CARACTERÍSTICAS INCLUIDAS */

.boxes_features
    display flex
    flex-flow row wrap    
    justify-content space-evenly
    width 80%
    margin 30px 0
    
    
.box_features
    width 260px
    height 200px
    border-radius 6px
    border #222 1px solid
    display flex
    flex-direction column
    position relative
    /* border #353535 1px solid */
    background-color transparent
    color #000
    transition all .2s ease-out
    margin 20px 0
    
    h4
        transform translateY(50px)
        color #FFF
        transition transform .3s ease
    &::before
        content ''
        background greyboot
        border-radius 6px
        position absolute
        width 100%
        height 100%
        transform scale(0)
        transition all .2s ease
    &:hover
        /* background-color var(--clr-pry)         */
        border #777 1px solid
        color #FFF
        h4
            transform translateY(10px)
            color color18
        .text_features p
            transform translateX(0px)
        .circle_icon_features,.circle_anim_features .effect_circle
            background-color #FFF
        &::before
            transform scale(1)

    .circle_anim_features
        /* content '' */
        display flex
        color #000
        position absolute
        height 120px
        width 120px
        
        transform translate(-50%,-50%)
        left 130px
        top 0px
        z-index 0
        .effect_circle
            animation-name circle-feature
            animation-duration 4s
            animation-iteration-count infinite
            animation-timing-function linear
            /* animation-direction alternate */
            animation-fill-mode both
            width 100%
            height 100%
            position relative
            background-color color18
            border-radius 50%
            opacity 0.3
            transition all .3s ease-out
    .circle_anim_features.anim2
        .effect_circle
            animation-delay 4s
    .circle_icon_features
        background-color color18
        display flex
        align-items center
        justify-content: center
        position absolute
        width 75px
        height 75px
        border-radius 50%        
        transform translate(-50%,-50%)
        left 130px
        top 0
        z-index 10
        transition all .5s ease-out
        .icon_feature
            background-image url('../icons/responsive.svg')
            background-size cover
            background-position center
            position relative
            align-items center
            justify-content center
            display flex
            z-index:100
            width:40px;
            height 40px
    
    .title_features
        width 100%
        display flex
        margin-top 60px
        justify-content center
        
        h4
            font-size 22px
            font-family Poppins
        
    .text_features
        width 90%
        margin 20px auto
        padding 10px 0
        overflow hidden
        display flex
        align-items center
        justify-content center
        p
            font-size 15px
            font-family Poppins            
            letter-spacing -1px
            text-align center
            transform translateX(-300px)
            transition transform .4s ease
            
        


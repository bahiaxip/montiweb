.skills2
    margin 20px auto 0px auto
    position relative
    width 60%
    .box_skills1,.box_skills2
        display flex
        justify-content space-between
        margin 20px auto
        width 100%
        flex-flow row wrap
    .box_skills2 .back_skill#back_skill1
        transform scale(0)
        
    .back_skill1,.back_skill2
        border-radius 50%
        background-color greyboot
        /* border-radius 4px */
        color #FFF
        display flex
        flex-flow column
        font-family YoutubeB
        font-size 18px
        margin auto
        /* min-height 250px
        min-width 175px
        width 25% */
        width 250px
        height 250px
        transform scale(0)
        
        .skill
            margin auto
            .skill_icon
                width 80px
                margin auto
                display flex            
            .path
                fill transparent
                stroke-width 1px
                stroke color18
                
                
                
                transition stroke-dashoffset 1s linear 0s,fill 0.2s linear 1s,stroke-width 0.2s linear 1s
            
                
                
                

            /* .path.stroke.svg_active
                fill transparent
                stroke-width 1px */
                    
            .path.svg_active
                stroke-dashoffset 0px
                fill color18
                stroke-width 0px
            
            img
                display flex
                margin 20px auto
            p	
                font-size 18px
                text-align center
                margin-top 10px
                
    /* en ocasiones es suficiente con 110 px y en otras más según el recorrido del trazo*/
    .back_skill1.offset1 .path
        stroke-dasharray 150px
        stroke-dashoffset -150px
    .back_skill1.offset2 .path
        stroke-dasharray 220px
        stroke-dashoffset -220px
    /* el offset3 (icono de SEO) es un poco distinto al resto */
    .back_skill1.offset3 .path
        stroke-width 200px
        fill transparent 
        stroke-dasharray 20000px
        stroke-dashoffset -20000px
    .back_skill2.offset1 .path
        stroke-dasharray 100px
        stroke-dashoffset -100px
    .back_skill2.offset2 .path
        stroke-dasharray 200px
        stroke-dashoffset -200px
    .back_skill2.offset3 .path
        stroke-dasharray 250px
        stroke-dashoffset -250px


    /* SERVICIOS DE DISEÑO WEB */

.boxes_services
    align-items center
    display flex
    height 75%
    width 100%
    justify-content space-evenly
    flex-flow row wrap
    margin 20px 0

.boxes_services h3
    font-size 20px

/* cajas de tipos de servicio: WP, Ecommerce, A medida.... */
.box_service, .box_service
    margin 20px 10px
    background var(--grd-box)
    border-radius 6px
    box-shadow var(--bshw-box)
    overflow hidden
    width 250px
    height 250px
    display flex
    flex-direction column
    justify-content center
    align-items center
    position relative
    

.box_service .circle
    position absolute
    left auto
    top -6vw
    right -6vw
    bottom auto
    width 6vw
    height 6vw
    border-radius 100%
    background-color #252525
    transition all .8s linear


.text .box:hover
    color #FFF

.box_service:hover .circle
    transform  translate3d(3vw, -3vw, 0px) scale3d(1, 1, 1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg, 0deg)
    width 55vw
    height 55vw
    /* transition:all 1s linear; */

.box_service img
    width 64px
    z-index 1

.box_service h3
    margin 20px 0
    font-size 20px
    font-family Poppins
    transition color .5s linear;
    z-index 1;  
    

.box_service:hover .social-cred .social-text
    transform translate3d(0px, 0%, 0px) scale3d(1,1,1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg, 0deg)
    opacity 1
    color #FFF

.box_service:hover h3
    color color18

.box_service .social-cred
    display flex
    position relative

.box_service .social-cred .social-text
    opacity 0
    transform translate3d(0px, 100%, 0px) scale3d(1,1,1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg, 7deg)
    z-index 1
    transition all .5s linear
    /* transform-style:preserve-3d; */

/* FIN DE SERVICIOS DE DISEÑO WEB */


    /* CAJAS DE CARACTERÍSTICAS INCLUIDAS */

.boxes_features
    display flex
    flex-flow row wrap    
    justify-content space-evenly
    width 80%
    margin 30px 0
    
.box_features
    width 260px
    height 200px
    border-radius 6px
    display flex
    flex-direction column
    position relative
    /* border #353535 1px solid */
    background-color #FFF
    color #000
    transition background .2s ease-out
    margin 20px 0
    &:hover
        background-color var(--clr-pry)        
        color #FFF
        h4
            color color18
        .circle_icon_features,.circle_anim_features .effect_circle
            background-color #FFF
            

    .circle_anim_features
        /* content '' */
        display flex
        color #000
        position absolute
        height 120px
        width 120px
        
        transform translate(-50%,-50%)
        left 130px
        top 0px
        z-index 0
        .effect_circle
            animation-name circle-feature
            animation-duration 4s
            animation-iteration-count infinite
            width 100%
            height 100%
            position relative
            background-color color18
            border-radius 50%
            opacity 0
            transition all .3s ease-out
    .circle_icon_features
        background-color color18
        display flex
        align-items center
        justify-content: center
        position absolute
        width 75px
        height 75px
        border-radius 50%        
        transform translate(-50%,-50%)
        left 130px
        top 0
        z-index 999
        transition all .5s ease-out
        .icon_feature
            background-image url('../icons/responsive.svg')
            background-size cover
            background-position center
            position relative
            align-items center
            justify-content center
            display flex
            z-index:100
            width:40px;
            height 40px
    
    .title_features
        width 100%
        display flex
        margin-top 60px
        justify-content center
        
        h4
            font-size 22px
            font-family Poppins
        
    .text_features
        width 90%
        margin 20px auto

        p
            font-size 15px
            font-family Poppins
            
            letter-spacing -1px
        

/* ANIMACIÓN DE iconos en CARACTERÍSTICAS QUE INCLUYEN LOS SITIOS EN MONTIWEB */
@keyframes circle-feature
    0%
        transform scale(.75)
        opacity 0
    50%
        opacity 0.5
        
    100%
        transform scale(1)
        opacity 0

/* FIN ANIMACIONES DE ICONOS */


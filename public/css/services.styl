        .title
            display flex
            justify-content: center
            width 100%
            padding-top 30px
            z-index 3
            h1
                color color22
                font-size 60px
                font-family Poppins
                letter-spacing 2px
                font-weight 600
                span.fill
                    color color18


        .div_tools
            width 100%
            min-height 200px            
            display flex
            justify-content center
            align-items flex-end
            z-index 3
            .tools
                width 90%
                display flex
                justify-content space-evenly
                align-items center
                overflow-x auto
                scrollbar-width none
                scroll-snap-type x mandatory
                scroll-behavior smooth
                .no-transition
                    scroll-behavior auto
                
                .tool
                    min-width 60px
                    height 60px
                    display flex
                    align-items center
                    justify-content center
                    background-size cover
                    margin 10px 50px
                
                .tool.html5
                    background-image url('../icons/tools/html5.svg')
                .tool.css3
                    background-image url('../icons/tools/css3.svg')
                .tool.laravel
                    background-image url('../icons/tools/laravel.svg')
                    min-width 85px
                    height 85px
                .tool.wordpress
                    background-image url('../icons/tools/wordpress.svg')
                .tool.vue
                    background-image url('../icons/tools/vue.svg')                
                .tool.woocommerce
                    background-image url('../icons/tools/woocommerce.svg')
                .tool.angular
                    background-image url('../icons/tools/angular.svg')
                .tool.mysql
                    background-image url('../icons/tools/mysql.svg')
                    min-width 90px
                    height 90px
                .tool.npm
                    background-image url('../icons/tools/npm.svg')
                .tool.node
                    background-image url('../icons/tools/nodejs.svg')
                .tool.livewire
                    background-image url('../icons/tools/livewire.svg')
                .tool.mongo
                    background-image url('../icons/tools/mongo.svg')
                .tool.git
                    background-image url('../icons/tools/git.svg')
                .tool.bootstrap
                    background-image url('../icons/tools/bootstrap.svg')
                .tool.jquery
                    background-image url('../icons/tools/jquery.svg')
                
                .content
                    position: absolute
                    inset 4px
                    background-color #222
                    /* padding 50px 40px */
                    border-radius 8px
                    z-index 2
                    display flex
                    overflow hidden
                    /* justify-content: center */
                    flex-direction column

                    .icon
                        padding-top 10px
                        height 50%
                        display flex
                        align-items center
                        justify-content: center
                        .box_svg
                            border-radius 50%
                            display flex
                            justify-content center
                            align-items center
                            width 115px
                            height 115px
                            transition all .2s ease .1s
                            img
                                transition all .2s ease .1s

                    .title            
                        align-items center
                        display flex
                        flex-direction column
                        justify-content: space-evenly
                        height 50%
                        
                        width 100%
                        
                        h3
                            transform translateY(20px)
                            color #FFF
                            font-family Poppins
                            transition all .2s ease .1s
                    
                        .button
                            font-family Poppins
                            /* padding 8px 15px */
                            font-size 14px
                            background rgba(255,255,255, .2)
                            
                            border #000 1px solid
                            box-shadow  0 0 5px color9
                            border-radius 8px
                            color rgba(255,255,255,.8)
                            font-weight 600
                            letter-spacing 1px
                            cursor pointer
                            position relative
                            z-index 1
                            width 100px
                            height 35px
                            display flex
                            transform translateY(100px)
                            transition all .3s ease
                            span.back
                                border-radius 8px
                                position absolute
                                width 0
                                height 100%
                                top 0
                                left 0
                                background-color #000
                                z-index 1
                                transition width .5s linear
                            span.text_btn
                                width 100%
                                height 100%
                                display flex
                                align-items center
                                justify-content: center
                                background transparent
                                z-index 2
                            &:hover
                                span.back
                                    width 100%
                                box-shadow  0 0 10px color9
                                

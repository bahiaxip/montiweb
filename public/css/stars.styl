section.contact .night
    position absolute
    width 100%
    height 100vh
    transform rotateZ(40deg)
.star{
    position:absolute;
    left:50%;
    top:50%;
    height:4px;
    width:0px;
    background:linear-gradient(-45deg,#FFF,rgba(255,255,255,0));
    border-radius:999px;
    filter:drop-shadow(0 0 6px #699BFF);
    transition:width 1s linear, transform 3s linear;
    /* animation:tail 5s ease-in-out 15s 2,
            falling 5s ease-in-out 15s 2; */
}
@keyframes tail{
    0%{
        width:0px;
    }
    30%{
        width:100px;
    }
    100%{
        width:0px;
    }
}
@keyframes falling{
    0%{
        transform:translateX(0);
    }
    100%{
        transform:translateX(300px);
    }
}

.wrapBubble
    position absolute
    animation animate2 4s linear infinite alternate-reverse,animate 15s linear
    z-index 0
    transform  translateX(0)
    top 100%
span.bubble
    position absolute
    /* bottom -50px */
    background transparent
    border-radius 50%
    pointer-events none
    box-shadow:inset 0 0 10px rgba(255,255,255,.5);
    /* animation animate 4s linear infinite */
    z-index 0

span.bubble::before
    background radial-gradient(#FFF,transparent)
    border-radius 50%
    content ''
    position absolute
    width 100%
    height 100%
    transform scale(0.25) translate(-70%,-70%)

section.contact.transparent
    background-color transparent
    
section.contact
    align-items center
    background-color color20
    display flex
    flex-direction column
    justify-content center
    height 100vh
    min-height 720px
    /* overflow hidden */
    position relative
    transition background .5s linear
    
    .title
        display flex
        justify-content: center
        width 100%
        padding-top 40px
        z-index 3
        h1
            color color22
            font-size 60px
            font-family Poppins
            letter-spacing 2px
            font-weight 600
            span.fill
                color color18
    
    
        
    .container
        background rgba(13,16,17,.5)
        backdrop-filter blur(2px)
        /* border color21 1px solid */
        border-radius 20px
        /* box-shadow 0 0 22px color21 */

        margin-top 60px
        position relative
        height 60vh
        min-height 500px
        width 70%
        max-width 1000px
        z-index 3
    
        .box
            padding 20px
            position relative
            display grid
            grid-template-columns repeat(auto-fit,minmax(300px, 1fr))
            width 100%
            .col
                display flex
                padding 0 10px
                margin 30px 0 20px
                position relative
                width 100%
                justify-content space-evenly
                
                    
                .inputBox
                    position relative
                    height 50px
                    width 45%
                    
                    input,textarea,select,select > option
                        border none
                        color color7
                        outline none
                        padding 0 10px
                        position absolute
                        background transparent
                        box-shadow none
                        font-size 18px
                        height 100%
                        width 100%
                        z-index 1
                    select
                        background-color rgba(73,73,73,.3)
                        padding 10px
                        > option
                            background-color #000
                            padding 10px 5px
                            

                    .text
                        color color23
                        position absolute
                        top 0
                        left 10px
                        line-height 40px
                        font-family Poppins
                        font-size 18px
                        font-weight 600
                        display block
                        pointer-events none
                        transition .5s
                    input:focus + .text,
                    input:valid + .text
                        color color18
                        font-size 14px
                        top -35px
                        left 0px    

                    .line
                        background-color rgba(73,73,73,.3)
                        border-radius 2px
                        position absolute
                        bottom 0
                        width 100%
                        height 2px
                        transition .5s
                    input:focus ~ .line, 
                    input:valid ~ .line
                        height 100%
                    
                    .select-box
                        display flex
                        width 100%
                        flex-direction column
                        .options-container.active
                            max-height 240px

                            opacity 1
                            order 1
                            overflow-y scroll
                        .options-container
                            background-color rgba(73,73,73,.3)
                            color:#f5f6fa;
                            
                            max-height 0px
                            width 100%
                            opacity 0
                            transition all 0.4s 
                            border-bottom-left-radius 8px
                            overflow hidden
                            order 1
                            z-index 3
                            &::-webkit-scrollbar
                                width 8px
                                background-color rgba(73,73,73,.3)
                                /* border-radius 0 8px 8px 0 */
                            &::-webkit-scrollbar-thumb
                                background-color rgba(73,73,73,.8)
                                /* border-radius 0 8px 8px 0 */
                            .option
                                padding 12px 24px
                                cursor pointer
                                &:hover
                                    background-color rgba(73,73,73,.8)
                                    label
                                        color color18                                
                                .radio
                                    display none
                            label
                                color #FFF
                                cursor pointer
                                
                        .selected
                            color #FFF
                            cursor pointer
                            order 0
                            padding 12px 24px
                            position relative
                            z-index 1
                       .selected.active
                            color color18
                .inputBox.select .line
                    height 100%
                .inputBox.textarea
                    position relative
                    height 100px
                    width 92%
                    padding 10px 0                    
                    textarea                        
                        height 80%
                        resize none
                        transition .5s
                        &::-webkit-scrollbar
                            width 8px
                            background-color rgba(73,73,73,.3)
                                
                        &::-webkit-scrollbar-thumb
                            background-color rgba(73,73,73,.8)
                        

    .container .box .inputBox.textarea textarea:focus + .text,
    .container .box .inputBox.textarea textarea:valid + .text
        color color18
        font-size 14px
        top -35px
        left 0
    .container .box .inputBox.textarea textarea:focus ~ .line,
    .container .box .inputBox.textarea textarea:valid ~ .line
        height 100%

@keyframes animate
    0%
        top 100%
        
    100%
        top 0%

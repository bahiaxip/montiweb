.box_features
    margin 20px 10px
    background var(--grd-box)
    border-radius 6px
    box-shadow var(--bshw-box)
    overflow hidden
    width 250px
    height 250px
    display flex
    flex-direction column
    justify-content center
    align-items center
    position relative
    

.box_features .circle
    position absolute
    left auto
    top -6vw
    right -6vw
    bottom auto
    width 6vw
    height 6vw
    border-radius 100%
    background-color #252525
    transition all .8s linear


.text .box:hover
    color #FFF

.box_features:hover .circle
    transform  translate3d(3vw, -3vw, 0px) scale3d(1, 1, 1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg, 0deg)
    width 55vw
    height 55vw
    /* transition:all 1s linear; */

.box_features img
    width 64px
    z-index 1

.box_features h3
    margin 20px 0
    font-size 20px
    font-family Poppins
    transition color .5s linear;
    z-index 1;  
    

.box_features:hover .social-cred .social-text
    transform translate3d(0px, 0%, 0px) scale3d(1,1,1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg, 0deg)
    opacity 1
    color #FFF

.box_features:hover h3
    color color18


.box_features .social-cred
    display flex
    position relative
    

.box_features .social-cred .social-text
    opacity 0
    transform translate3d(0px, 100%, 0px) scale3d(1,1,1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg, 7deg)
    z-index 1
    transition all .5s linear
    
    /* transform-style:preserve-3d; */
   

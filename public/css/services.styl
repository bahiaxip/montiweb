    /* servicio de diseño web */
        

    section.webdesign,section.webdevelopment, section.webseo
        padding-top 50px
        .title
            width 100%
            display flex
            justify-content center
        .detail.description
            margin-right -100px
            z-index 2
            background-color #000
            padding 40px
        .detail.image
            min-height 550px
        .detail
            align-items center
            width 50%
            display flex
            justify-content center
            min-width 400px
        
            .text
                width 80%
                display flex
                flex-direction column
                align-items center
                justify-content center

            h2
                font-size 30px
                color #FFF
            p
                width 100%
                color color24
                font-size 18px
            .image
                svg
                    width 600px
                    transition transform 0.2s ease
                    &:hover
                        transform scale(1.1)

            .image_development
                background url(../img/development.jpg)
                background-size cover
                width 700px
                min-height 300px
                height 450px
                min-width 300px
                position absolute
                z-index 1
                

                
                
                    

                
        
        .wordpress, .woocommerce, .custom
            align-items center
            width 30%
            min-width 320px
            display flex
            /* justify-content center */
            flex-direction column
            flex-wrap: nowrap
            background-color #222
            border-radius 10px
            margin 0 10px
            padding 15px
            .icon
                align-items center
                display flex
                justify-content center
                
                width 100%
            h4
                font-size 30px
                color #FFF
            .text
                color #FFF
                height 100%
                width 50% 

            p
                width 90%
                text-align justify
                margin-top 20px
                color color22

            &:hover
                background-color color24
                p,h4
                    color #222
        .wordpress, .woocommerce, .custom
            
            img
                width 100px
                height 100px
/* FIN servicio de diseño web */

/* servicio de desarrollo web */
    section.webdevelopment
        .center100
            flex-flow row wrap
        
            .spa, .api, .pwa
                align-items center
                display flex
                flex-flow column wrap
                height 100%
                justify-content center
                padding 15px
                width 50%
                min-width 300px

                .title
                    align-items center
                    background-color #222
                    border-radius 10px
                    display flex
                    flex-direction column
                    height 100%
                    justify-content space-evenly
                    width 80%
                    min-width 300px
                    min-height 250px

                img
                    width 64px
                    height 64px
    section.webseo
        position relative
        padding 0 !important
        &::before
            content ''
            background url('../img/analytics.jpg')
            background-size cover
            background-position bottom
            width 100%
            position absolute
            height 100%
            opacity .3
            
        .detail.filter
            background-color rgba(0,0,0,.2)
            backdrop-filter blur(10px)
            padding 30px 0
        .detail
            color #FFF
        
        .features_seo
            
            border-top-left-radius 25px
            border-top-right-radius 25px
            display flex
            margin-top 20px
            width 100%
            flex-flow row wrap
            justify-content: center
            padding 30px 10px
            
            .featureseo
                /* background-color:#FFF */
                /* background-color rgba(0,0,0,.2) */
                background-color color20
                /* background-color rgba(0,0,0,1) */
                backdrop-filter blur(10px)
                border-radius 10px                
                color #FFF
                margin 20px
                min-width 200px
                height 230px
                overflow hidden
                transition all .3s
                width 300px
                &:hover
                    background-color rgba(0,0,0,.2)
                    .top                        
                        .icon
                            align-items flex-start
                            img,svg                                
                                transform scale(0.8)
                    .title 
                        h5
                            transform translateY(-40px)
                            color color18
                    p
                        bottom 15px
                .top
                    align-items center
                    
                    width 100%
                    height 50%
                    display flex
                    justify-content center
                    padding 10px
                    .icon
                        /* background-color color18 */
                        /* border #FFF 1px solid */
                        border-radius 50%
                        display flex
                        align-items center
                        justify-content center
                        height 100px
                        padding 10px 0
                        width 100px

                        img,svg
                            width 50px 
                            height 50px
                            stroke #FFF
                            transition all .3s ease
                        
                .title
                    
                    font-size 20px
                    display flex
                    height 50%
                    justify-content center

                    width 100%
                    h5
                        color #FFF
                        font-size 20px
                        position relative
                        transition all .3s ease
                        user-select none
                p
                    position absolute
                    bottom -80%
                    font-size 15px
                    color color24
                    padding 0 15px
                    text-align justify
                    transition all .3s ease
                    user-select none




/* fin servicio de desarrollo web */
